{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2015",
        "moduleResolution": "node",

        "strict": true,
        "strictNullChecks": true,
        "noEmit": true,
        "noImplicitAny": true,
        "skipLibCheck": true,

        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules", "library", "local", "temp", "build", "settings"]
}
